<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/courseAlertRVCourseTextView"
        style="@style/AlertRecyclerViewItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/courseAlertRVDateTimeTextView"
        style="@style/AlertRecyclerViewItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/courseAlertRVCourseTextView" />

    <TextView
        android:id="@+id/courseAlertRVMessageTextView"
        style="@style/AlertRecyclerViewItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/courseAlertRVDateTimeTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
